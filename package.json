{
  "name": "ts-serializer",
  "version": "0.3.1",
  "description": "A simple typescript serialization library.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index",
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha --reporter spec --require ts-node/register --require source-map-support/register --full-trace '**/**/*.spec.ts'",
    "lint": "./node_modules/.bin/tslint --project tsconfig.json",
    "build": "./node_modules/.bin/tsc",
    "postinstall": "postinstall-build dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seidel-Michael/ts-serializer.git"
  },
  "author": "Balluff GmbH - Michael Seidel",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Seidel-Michael/ts-serializer/issues"
  },
  "homepage": "https://github.com/Seidel-Michael/ts-serializer#readme",
  "dependencies": {
    "postinstall-build": "^5.0.1",
    "fs-extra": "^6.0.1"
  },
  "nyc": {
    "include": [
      "**/**/*.ts"
    ],
    "exclude": [
      "**/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^5.0.2",
    "@types/mocha": "^5.2.0",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^9.6.6",
    "@types/sinon": "^4.3.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.1",
    "mock-fs": "^4.5.0",
    "nyc": "^11.7.3",
    "sinon": "^5.0.7",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  }
}
